<body>
    <div class="card cardBody">
        <div class="card-body innercard">
            <form action="/user/<%=response.id%>/Delete?_method=DELETE" method="post" class="form">
                <h3 class="text-center my-5 text-">Enter password to confirming deletion of email: <%=response.email%></h3>
                  <div class="form-floating">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                    <label for="password">Password</label>
                    <div class="d-grid gap-2">
                        <button class="btn btn-success my-4" type="submit">Button</button>
                    </div>
                  </div>
            </form>
        </div>
      </div>
